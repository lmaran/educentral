{
	"name": "angular-node-starter",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"start": "npm run clean && npm run start:all",
		"start:all": "run-p \"start:server\" \"start:client\"",
		"start:server": "nodemon -e ts --exec \"npm run watch:server\"",
		"watch:server": "tsc -p ./server && npm run reload && node dist/server/app.js",
		"start:client": "ng serve --proxy-config proxy.conf.json",
		"build": "npm run clean && npm run build:all",
		"build:all": "run-p \"build:server\" \"build:client\"",
		"build:server": "tsc -p ./server",
		"build:client": "ng build --prod --output-path=dist/client",
		"lint": "run-p \"lint:server\" \"lint:client\"",
		"lint:server": "tslint './server/**/*.ts' -c ./server/tslint.json",
		"lint:client": "ng lint --type-check",
		"lint:server:fix": "tslint --fix './server/**/*.ts' -c ./server/tslint.json",
		"lint:client:fix": "ng lint --fix",
		"clean": "rimraf dist",
		"reload": "echo \"Added automatically in order to trigger a browser reload in dev mode.\" > client/z-browserReload.txt",
		"test": "ng test",
		"e2e": "ng e2e"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^4.0.0",
		"@angular/common": "^4.0.0",
		"@angular/compiler": "^4.0.0",
		"@angular/core": "^4.0.0",
		"@angular/forms": "^4.0.0",
		"@angular/http": "^4.0.0",
		"@angular/platform-browser": "^4.0.0",
		"@angular/platform-browser-dynamic": "^4.0.0",
		"@angular/router": "^4.0.0",
		"bootstrap": "^3.3.7",
		"core-js": "^2.4.1",
		"express": "^4.15.3",
		"lodash": "^4.17.4",
		"rxjs": "^5.1.0",
		"zone.js": "^0.8.4"
	},
	"devDependencies": {
		"@angular/cli": "^1.2.1",
		"@angular/compiler-cli": "^4.0.0",
		"@angular/language-service": "^4.0.0",
		"@types/jasmine": "^2.5.53",
		"@types/jasminewd2": "~2.0.2",
		"@types/node": "^6.0.60",
		"codelyzer": "^3.0.1",
		"jasmine-core": "~2.6.2",
		"jasmine-spec-reporter": "~4.1.0",
		"karma": "~1.7.0",
		"karma-chrome-launcher": "~2.1.1",
		"karma-cli": "~1.0.1",
		"karma-coverage-istanbul-reporter": "^1.2.1",
		"karma-jasmine": "~1.1.0",
		"karma-jasmine-html-reporter": "^0.2.2",
		"nodemon": "^1.11.0",
		"npm-run-all": "^4.0.2",
		"protractor": "~5.1.2",
		"rimraf": "^2.6.1",
		"ts-node": "^3.2.0",
		"tslint": "^5.5.0",
		"typescript": "^2.4.1"
	}
}
